{
  "files.associations": {
    "config*.json": "jsonc",
    ".dev.vars": "toml",
    ".env.*": "properties"
  },
  "vs-browser.url": "http://localhost:51730/",
  "VsCodeTaskButtons.tasks": [
    { "label": "update", "task": "bun: update" },
    { "label": "wrangler update", "task": "wrangler: update" },
    { "label": "build", "task": "bun: build" },
    { "label": "start", "task": "bun: start" },
    { "label": "deploy", "task": "bun: deploy" },
    { "label": "dev", "task": "bun: dev" },
  ],
  // Explorer で非表示にするもの
  "files.exclude": {
    "**/.env.*.local": true,
    "**/node_modules": true,
    "**/desktop.ini": true,
    "vite.config.ts.timestamp-*": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "_data.site.yaml",
        "cmd": "npm run update-site"
      },
      {
        "match": "_data.characters.yaml",
        "cmd": "npm run update-character"
      },
      {
        "match": "_data.sound._data\\.yaml",
        "cmd": "npm run update-sound"
      },
      {
        "match": "_data._media.*_data\\.yaml",
        "cmd": "npm run update-image"
      }
    ]
  },
  "markdown.styles": [
    "https://cottonwind.com/styles/styles.css"
  ]
}
